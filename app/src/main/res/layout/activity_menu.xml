<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MenuActivity">

    <!-- The main content view -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:elevation="14dp"
        app:subtitleTextColor="#FFFFFF"
        app:titleTextColor="#FFFFFF">

        <ImageButton
            android:id="@+id/main_menu_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@color/colorBackground"
            android:padding="5dp"
            android:scrollbarSize="5dp"
            android:src="@drawable/ic_menu_close"
            tools:layout_editor_absoluteX="388dp"
            tools:layout_editor_absoluteY="18dp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/menu_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/menu_about"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorBackground"
        android:text="Rating"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/menu_about4"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/menu_about4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorBackground"
        android:text="Support "
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/menu_about3"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/menu_about3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorBackground"
        android:text="Advice"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/menu_about2"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/menu_about2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorBackground"
        android:text="About"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main"
        tools:layout_editor_absoluteX="-16dp" />
</android.support.constraint.LinearLayout>