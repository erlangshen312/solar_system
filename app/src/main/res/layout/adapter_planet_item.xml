<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222">

    <ImageView
        android:id="@+id/image_of_planet"
        android:layout_width="111dp"
        android:layout_height="113dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/name_of_planet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Name of planet"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_of_planet"
        app:layout_constraintTop_toTopOf="@+id/image_of_planet"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/planet_type"
        android:layout_width="260dp"
        android:layout_height="27dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:text="Type of planet"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/name_of_planet"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_of_planet"
        app:layout_constraintTop_toBottomOf="@+id/name_of_planet"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/subname_of_planet"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Subname of planet"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/name_of_planet"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_of_planet"
        app:layout_constraintTop_toBottomOf="@+id/name_of_planet"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>