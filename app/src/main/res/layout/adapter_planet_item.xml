<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_of_planet"
        android:layout_width="111dp"
        android:layout_height="113dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/name_of_planet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/name_of_planet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Name of planet"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_of_planet"
        app:layout_constraintTop_toTopOf="@+id/image_of_planet"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/note_of_planet"
        android:layout_width="237dp"
        android:layout_height="78dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Note of planet"
        app:layout_constraintBottom_toBottomOf="@+id/image_of_planet"
        app:layout_constraintStart_toEndOf="@+id/image_of_planet"
        app:layout_constraintTop_toBottomOf="@+id/name_of_planet"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>